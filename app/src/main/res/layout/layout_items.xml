<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:id="@+id/mainItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userIconsImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/avatar_male"/>

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/userIconsImages"
            android:layout_alignEnd="@id/userIconsImages"
            android:background="@drawable/button_square"
            android:src="@drawable/ic_baseline_delete"/>

        <RelativeLayout
            android:id="@+id/layoutData1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/userIconsImages"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/defaultname"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkPurple"/>

                <ImageButton
                    android:id="@+id/editButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/name"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_square"
                    android:src="@drawable/ic_baseline_edit" />

            </RelativeLayout>

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonsLayout"
                android:text="@string/user_email"
                android:textColor="@color/darkPurple"/>

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userEmail"
                android:text="@string/defaultsubject"
                android:textColor="@color/darkPurple"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/userIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usericons"
            android:visibility="gone"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>