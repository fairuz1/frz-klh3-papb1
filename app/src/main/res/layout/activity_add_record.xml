<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <EditText
        android:id="@+id/studentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/studentid">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/studentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:inputType="textMultiLine">
    </EditText>

    <EditText
        android:id="@+id/studentMajor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/major"
        android:inputType="textMultiLine">
    </EditText>

    <EditText
        android:id="@+id/studentGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/student_gender"
        android:inputType="textMultiLine">
    </EditText>

    <EditText
        android:id="@+id/studentAddreas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/student_address"
        android:inputType="textMultiLine">
    </EditText>

    <Button
        android:id="@+id/add_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/add_record" />
</LinearLayout>